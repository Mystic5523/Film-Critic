<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>New Account</h4>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="user_name_signup" type="text" class="validate">
            <label for="user_name_signup">User Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password_signup" type="password" class="validate">
            <label for="password_signup">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate">
            <label for="email">Email</label>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a id="agree" class="modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>

